@model User
<div class="row justify-content-md-center">
    <div class="card" style="background-color:#98FB98"> 
        <div class="card-body">
            <div>
                <div class="row">
                    <div class="col">
                    </div>
                    <div class="col">
                        <div class="btn-group">
                            <a href="#" class="btn btn-success disabled" aria-current="page">Profile</a>
                            <a href="#" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#exampleModal">Edit</a>
                        </div>

                        <div>
                            <br />
                        </div>

                        <div>
                            <ol class="list-group">
                                <li class="list-group-item">Id: @Model.Id</li>
                                <li class="list-group-item">FullName: @Model.FullName</li>
                                <li class="list-group-item">Login: @Model.Login</li>
                                <li class="list-group-item">Role: @Model.Role</li>
                            </ol>
                        </div>
                    </div>
                    <div class="col">
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit profile data</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="EditProfile" asp-controller="Home" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div>
                        <div class="mb-3">
                            <input type="hidden" asp-for="Id" value=@Model.Id class="form-control" />

                            <label asp-for="FullName" class="form-label">Enter Full Name</label>
                            <input type="text" asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" />

                            <label asp-for="Login" class="form-label">Enter Login</label>
                            <input type="text" asp-for="Login" class="form-control" />
                            <span asp-validation-for="Login" />
                        </div>
                        <div class="mb-3">
                            <input type="submit" value="Save changes" class="btn btn-outline-success" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>